<h1 class="jumbotron text-center">Eat-Da-Burger!</h1>

<div class="container main-container">
  <div class="row">
    <div class="col-md-4">
      <h2>Burgers Not Eaten</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
         {{this.burger_name}}
          <button class="change-devoured btn btn-primary float" data-id="{{this.id}}" data-newDevour="{{devoured}}">
            DEVOUR
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devour"></label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured<br>
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div>

        <button type="submit" class="btn btn-primary">Add Burger</button>
      </form>

      <img src="/assets/img/60612.jpg">
    </div>

    <div class="col-md-4">


      <h2>Burgers Eaten</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li class="eaten">
        {{this.burger_name}}
          <button class="delete-burger btn btn-primary float" data-id="{{this.id}}">
            DELETE
          </button>
        </li>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>


</div>

    <footer class="footer">
        <div class="container">
            <span class="text-black">Background Image From: <a href="https://www.vecteezy.com/free-vector/pixel-art">Pixel Art Vectors by Vecteezy</a></span>
            <br>
            <span class="text-black">Cute Cheeseburger Image From: <a href="https://www.freepik.com/free-photos-vectors/food">Food vector created by gstudioimagen - www.freepik.com</a></span>
        </div>
    </footer>

